# Anime News AI Professional Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# API KEYS (Required)
# =============================================================================

# Google Gemini AI API Key
# Get it from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# NewsAPI Key (for fetching anime news)
# Get it from: https://newsapi.org/register
NEWS_API_KEY=your_news_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Environment (development, staging, production)
ENVIRONMENT=development

# Server Port
PORT=8080

# =============================================================================
# RATE LIMITING & PERFORMANCE
# =============================================================================

# Maximum number of articles to fetch and process
MAX_ARTICLES=5

# HTTP request timeout (e.g., 30s, 1m)
REQUEST_TIMEOUT=30s

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# Delay between API calls to respect rate limits (e.g., 1s, 500ms)
RATE_LIMIT_DELAY=1s

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Maximum request size in bytes (default: 1MB)
MAX_REQUEST_SIZE=1048576

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json
